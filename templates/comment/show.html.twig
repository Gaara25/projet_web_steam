{% extends 'base.html.twig' %}

{% block title %}{{ 'comment'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'comment'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>{{ 'content'|trans }}</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>{{ 'created_at'|trans }}</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_comment_index') }}">{{ 'back_to_list'|trans }}</a>
    <span>|</span>
    <a href="{{ path('app_comment_edit', {'id': comment.id}) }}">{{ 'edit'|trans }}</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}