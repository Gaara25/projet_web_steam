{% extends 'base.html.twig' %}

{% block title %}{{ 'game'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'game'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>{{ 'title'|trans }}</th>
                <td>{{ game.title }}</td>
            </tr>
            <tr>
                <th>{{ 'image'|trans }}</th>
                <td>{{ game.image }}</td>
            </tr>
            <tr>
                <th>{{ 'developer'|trans }}</th>
                <td>{{ game.developer }}</td>
            </tr>
            <tr>
                <th>{{ 'release_date'|trans }}</th>
                <td>{{ game.releaseDate ? game.releaseDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_game_index') }}">{{ 'back_to_list'|trans }}</a>
    <span>|</span>
    <a href="{{ path('app_game_edit', {'id': game.id}) }}">{{ 'edit'|trans }}</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}