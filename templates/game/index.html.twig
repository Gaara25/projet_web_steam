{% extends 'base.html.twig' %}

{% block title %}{{ 'game_index'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'game_index'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{ 'title'|trans }}</th>
                <th>{{ 'image'|trans }}</th>
                <th>{{ 'developer'|trans }}</th>
                <th>{{ 'release_date'|trans }}</th>
                <th>{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.title }}</td>
                <td>{{ game.image }}</td>
                <td>{{ game.developer }}</td>
                <td>{{ game.releaseDate ? game.releaseDate|format_date('full') : '' }}</td>
                <td>
                    <a href="{{ path('app_game_show', {'id': game.id}) }}">{{ 'show'|trans }}</a>
                    <span>|</span>
                    <a href="{{ path('app_game_edit', {'id': game.id}) }}">{{ 'edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ 'no_records_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_game_new') }}">{{ 'create_new'|trans }}</a>
{% endblock %}